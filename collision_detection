boolean collision;

void collide() {
  if (((egg.getX() >= b2.getX()) && egg.getX() <= (b2.getX() + b2.sx)) &&
    ((egg.getY() >= b2.getY()) && egg.getY() <= (b2.getY() + b2.sy))) {
    collision = true;
  }
}

void animateCollision() {
  if (collision == true) {
    egg.setX(b2.getX()+40);
    egg.setY(b2.getY());
  }
}

void collisionTest() {
  if (collision == true) {
    println("collision");
  }
}
